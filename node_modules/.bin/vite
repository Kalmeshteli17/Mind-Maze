#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=$(cygpath -w "$basedir")
        fi
    ;;
esac

# Ensure node has execute permissions
if [ ! -x "$basedir/node" ]; then
    chmod +x "$basedir/node" || {
        echo "Failed to make $basedir/node executable. Permission denied."
        exit 126
    }
fi

# Ensure vite.js has execute permissions
if [ ! -x "$basedir/../vite/bin/vite.js" ]; then
    chmod +x "$basedir/../vite/bin/vite.js" || {
        echo "Failed to make $basedir/../vite/bin/vite.js executable. Permission denied."
        exit 126
    }
fi

# Execute node with vite.js
if [ -x "$basedir/node" ]; then
    exec "$basedir/node" "$basedir/../vite/bin/vite.js" "$@"
else
    exec node "$basedir/../vite/bin/vite.js" "$@"
fi
